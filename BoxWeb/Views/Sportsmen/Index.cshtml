@model IEnumerable<ConsoleApp1.Sportsman>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthsdayDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.WeightCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Achivments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeGroup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthsdayDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeightCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Achivments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeGroup)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SportsmanID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SportsmanID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SportsmanID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
